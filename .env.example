# ==================================================
# GPUBROKER Environment Configuration
# ==================================================
# Copy this file to .env and fill in your values
# See docs/ENVIRONMENT-VARIABLES.md for full reference
# ==================================================

# =============================================================================
# MODE CONFIGURATION
# =============================================================================
# Options: sandbox, live
# Sandbox: Uses test API keys, mock GPU data, console emails
# Live: Uses production API keys, real GPU provisioning, SES emails
GPUBROKER_MODE=sandbox

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
GPUBROKER_DOMAIN=gpubroker.site
# GPUBROKER_BASE_URL=https://gpubroker.site
# GPUBROKER_ADMIN_URL=https://admin.gpubroker.site
# GPUBROKER_API_URL=https://api.gpubroker.site

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=gpubroker
POSTGRES_PASSWORD=gpubroker_dev_password
POSTGRES_DB=gpubroker
DATABASE_URL=postgresql://gpubroker:gpubroker_dev_password@postgres:5432/gpubroker

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# DJANGO
# =============================================================================
SECRET_KEY=change-this-to-a-secure-random-string
DEBUG=true
DJANGO_SETTINGS_MODULE=config.settings.sandbox
ALLOWED_HOSTS=localhost,127.0.0.1,gpubroker.site

# =============================================================================
# STRIPE PAYMENT GATEWAY
# =============================================================================
# Get keys from: https://dashboard.stripe.com/apikeys

# Sandbox/Test Keys (sk_test_*, pk_test_*)
STRIPE_SECRET_KEY_TEST=sk_test_your_test_key
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_your_test_key

# Live Keys (sk_live_*, pk_live_*) - Only needed for production
# STRIPE_SECRET_KEY_LIVE=sk_live_your_live_key
# STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_your_live_key

# Webhook Secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# PAYPAL PAYMENT GATEWAY
# =============================================================================
# Get credentials from: https://developer.paypal.com/

# Sandbox Credentials
PAYPAL_CLIENT_ID_SANDBOX=your_sandbox_client_id
PAYPAL_CLIENT_SECRET_SANDBOX=your_sandbox_client_secret

# Live Credentials - Only needed for production
# PAYPAL_CLIENT_ID_LIVE=your_live_client_id
# PAYPAL_CLIENT_SECRET_LIVE=your_live_client_secret

# =============================================================================
# GPU PROVIDERS
# =============================================================================
# RunPod API Key (https://runpod.io)
RUNPOD_API_KEY=

# Vast.ai API Key (https://vast.ai)
VASTAI_API_KEY=

# Lambda Labs API Key (https://lambdalabs.com)
LAMBDA_API_KEY=

# Use mock data instead of real GPU APIs (for sandbox mode)
MOCK_GPU_PROVISIONING=true

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ECS Configuration (for pod deployment)
# ECS_CLUSTER_NAME=gpubroker-pods
# ECS_TASK_DEFINITION=gpubroker-pod

# S3 Buckets
# S3_BUCKET_STATIC=gpubroker-site-landing
# S3_BUCKET_BACKUPS=gpubroker-backups

# =============================================================================
# ClickHouse (Analytics)
# =============================================================================
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_DATABASE=gpubroker
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Auto-confirm user emails (skip verification in sandbox)
AUTO_CONFIRM_EMAIL=true

# Log webhook payloads (debugging, sandbox only)
LOG_WEBHOOK_PAYLOADS=true

# =============================================================================
# MONITORING
# =============================================================================
GRAFANA_PASSWORD=admin_local_secure

# =============================================================================
# REGIONAL SETTINGS
# =============================================================================
# Default region if geo-detection fails
GPUBROKER_DEFAULT_REGION=US

# Deployment region: GLOBAL, LATAM, EC, US, EU
GPUBROKER_DEPLOYMENT_REGION=GLOBAL

# Force specific country (for testing). Leave empty for auto-detect.
# GPUBROKER_FORCE_COUNTRY=EC
